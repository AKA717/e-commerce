<section class="mt-5" style="background-color:white;">
    <div class="text-center container py-5" style="margin-top: 5rem;">

        {{#if Products}}
        <div class="row">
            <div class="input-group ml-3 mb-5">
                <div class="form-outline">
                    <input type="input" id="search" class="form-control" />
                </div>
                <button type="button" class="btn btn-primary search-btn" onchange="Search(e)">search</button>
            </div>
        {{#each Products}}
            <div class="col-lg-4 col-md-12 mb-4">
                <div class="card cards">
                    <a href="/product-view/{{this._id}}">
                    <div class="bg-image hover-zoom ripple ripple-surface ripple-surface-light"
                        data-mdb-ripple-color="light">
                        <img src="/product-images/{{this._id}}.jpg"
                            class="w-100" />
                    </div>
                    </a>
                    <div class="card-body">
                        <h5 class="card-title mb-3">{{title}}</h5>
                            <p class="text-truncate">{{description}}</p>
                        <h6 class="mb-3">Rs.{{price}}/-</h6>
                        <button class="btn btn-primary" onclick="addToCart('{{this._id}}')">Add to Cart</button>
                    </div>
                </div>
            </div>
        {{/each}}
        </div>
         {{else}}
        <div class="spinner-border text-dark" role="status">
            <span class="visually-hidden">Loading...</span>
        </div>
        {{/if}}
    </div>
</section>

