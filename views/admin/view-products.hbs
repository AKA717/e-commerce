<section>
    <div class="container">
        <div class="row mt-3 mb-4 mr-1">
            <a class="btn btn-success ml-auto activate" href="/admin/add-product">Add Product</a>
        </div>
        <table class="table mt-3" id="myTable">
            <thead>
                <tr>
                    <th scope="col">Title</th>
                    <th scope="col">Category</th>
                    <th scope="col">Description</th>
                    <th scope="col">Price</th>
                    <th scope="col">Image</th>
                    <th scope="col">Options</th>
                </tr>
            </thead>
            <tbody>
                {{#each Products}}
                <tr>
                    <td>{{title}}</td>
                    <td>{{category}}</td>
                    <td>{{description}}</td>
                    <td>{{price}}</td>
                    <td><img src="/product-images/{{this._id}}.jpg" style="width:150px;height:100px"/></td>
                    <td>
                        <a href="/admin/edit-product/{{this._id}}" class="btn btn-primary text-center pr-4 pl-4">Edit</a>
                        <a href="/admin/delete-product/{{this._id}}" class="btn btn-danger mt-2 pr-3 pl-3" onclick=" return confirm('Are you sure about deleting {{title}} ?')">Delete</a>
                    </td>
                </tr>
                {{/each}}
            </tbody>
        </table>
    </div>
</section>

<script>
    $(document).ready( function () {
    $('#myTable').DataTable();
} );
</script>